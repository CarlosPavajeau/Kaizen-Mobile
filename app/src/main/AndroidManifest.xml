<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kaizen">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kaizen"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.ui.activities.TechnicianEmployeeActivity" />
        <activity android:name=".view.ui.activities.OfficeEmployeeActivity" />
        <activity android:name=".view.ui.activities.AdministratorActivity" />
        <activity android:name=".view.ui.activities.ClientActivity" />
        <activity android:name=".view.ui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
