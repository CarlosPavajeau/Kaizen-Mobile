<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.fragments.OfficeEmployeeHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/service_requests"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/head_line" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_service_requests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_small_spacing"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_15dp" />

        <Button
            android:id="@+id/bt_view_more_service_requests"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_15dp"
            android:gravity="center"
            android:text="@string/see_more"
            android:textColor="@color/genoa" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_30dp"
            android:text="@string/client_requests"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/head_line" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_client_requests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_small_spacing"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_15dp" />

        <Button
            android:id="@+id/bt_view_more_client_requests"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_15dp"
            android:gravity="center"
            android:text="@string/see_more"
            android:textColor="@color/genoa" />
    </LinearLayout>
</FrameLayout>
