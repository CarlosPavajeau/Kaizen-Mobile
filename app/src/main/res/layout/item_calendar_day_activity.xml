<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:elevation="0dp"
    app:cardBackgroundColor="@color/link_water"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_activity_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/text_view_drawable_padding"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="05:00 PM"
                android:textColor="@color/black"
                app:drawableStartCompat="@drawable/ic_baseline_schedule" />

            <TextView
                android:id="@+id/tv_activity_periodicity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawablePadding="@dimen/text_view_drawable_padding"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Semanal"
                android:textColor="@color/black"
                app:drawableStartCompat="@drawable/ic_baseline_repeat" />

            <TextView
                android:id="@+id/tv_activity_employees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawablePadding="@dimen/text_view_drawable_padding"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Manolo, Pedro"
                android:textColor="@color/black"
                app:drawableStartCompat="@drawable/ic_baseline_engineering" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
