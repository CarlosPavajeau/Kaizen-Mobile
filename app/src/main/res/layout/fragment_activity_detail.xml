<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.fragments.activityschedule.ActivityDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_detail_title_text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_30dp"
            android:orientation="vertical"
            android:padding="@dimen/spacing_15dp">

            <TextView
                android:id="@+id/tv_activity_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/text_view_drawable_padding"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="2020/05/07 a las 05:00 PM"
                android:textColor="@color/black"
                android:textSize="@dimen/info_text"
                app:drawableStartCompat="@drawable/ic_baseline_today" />

            <TextView
                android:id="@+id/tv_activity_periodicity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawablePadding="@dimen/text_view_drawable_padding"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Semanal"
                android:textColor="@color/black"
                android:textSize="@dimen/info_text"
                app:drawableStartCompat="@drawable/ic_baseline_repeat" />

            <TextView
                android:id="@+id/tv_activity_employees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawablePadding="@dimen/text_view_drawable_padding"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Manolo, Pedro"
                android:textColor="@color/black"
                android:textSize="@dimen/info_text"
                app:drawableStartCompat="@drawable/ic_baseline_engineering" />

            <TextView
                android:id="@+id/tv_activity_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawablePadding="@dimen/text_view_drawable_padding"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Control de plagas"
                android:textColor="@color/black"
                android:textSize="@dimen/info_text"
                app:drawableStartCompat="@drawable/ic_baseline_assistant" />

            <TextView
                android:id="@+id/tv_activity_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawablePadding="@dimen/text_view_drawable_padding"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Pendiente"
                android:textColor="@color/black"
                android:textSize="@dimen/info_text"
                app:drawableStartCompat="@drawable/ic_baseline_category" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
