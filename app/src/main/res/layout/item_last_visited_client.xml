<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="5dp"
    android:elevation="0dp"
    app:cardBackgroundColor="@color/link_water"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"

        android:orientation="vertical"
        app:layout_constraintCircleRadius="10dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_baseline_how_to_reg"
            app:tint="@color/cerulean_blue" />

        <TextView
            android:id="@+id/tv_client_name_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@string/last_visited_client_default_client_name"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_hour_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/last_visited_client_item_hour"
            android:textAlignment="center" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

