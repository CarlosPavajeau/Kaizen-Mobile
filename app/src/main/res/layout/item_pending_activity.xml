<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="5dp"
    android:elevation="0dp"
    app:cardBackgroundColor="@color/link_water"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"

        android:padding="@dimen/extra_small_spacing"
        app:layout_constraintCircleRadius="10dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_baseline_schedule"
            app:tint="@color/cerulean_blue" />

        <TextView
            android:id="@+id/tv_activity_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Activity type"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_activity_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/text_view_drawable_padding"
            android:drawablePadding="@dimen/text_view_drawable_padding"
            android:maxLines="1"
            android:text="2020/11/22"
            android:textAlignment="center"
            app:drawableStartCompat="@drawable/ic_baseline_today" />

        <TextView
            android:id="@+id/tv_activity_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/text_view_drawable_padding"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="03:00 PM"
            app:drawableStartCompat="@drawable/ic_baseline_schedule" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

